# Deny access to cache files but allow theme-admin.php
Order Deny,Allow
Deny from all

# Allow access to theme-admin.php and page-cache-data.php
<Files "theme-admin.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "page-cache-data.php">
    Order Allow,Deny
    Allow from all
</Files>

# Allow access with admin parameter
RewriteEngine On
RewriteCond %{QUERY_STRING} admin=1
RewriteRule ^theme-admin\.php$ theme-admin.php [L]
